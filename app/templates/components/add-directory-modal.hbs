<div id='addDirectoryModal' class="modal bottom-sheet">
    <div class="modal-content">
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        {{input value=name type='text' class='validate' id='dirName'}}
                        <label for="dirName">Name</label>
                    </div>
                    <div class="input-field col s6">
                        {{input value=path type='text' class='validate' id='dirPath'}}
                        <label for="dirPath">Path</label>
                    </div>
                </div>
                <div class="row">
                    <div class="switch">
                        <label>
                            Off
                            {{input checked=watch type='checkbox'}}
                            <span class="lever"></span>
                            On
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" {{action "save"}}>Add</button>
        <button class="btn btn-default" {{action "close"}}>Close</button>
    </div>
</div>